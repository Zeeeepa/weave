{
  "name": "weave",
  "version": "0.7.4",
  "description": "AI development toolkit",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": "./dist/weave.min.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && node build.js",
    "build:browser": "node build.js",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "build:all": "npm run build && npm run build:types",
    "prepare": "npm run build",
    "test": "jest --silent",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "format": "prettier --write \"src/**/*.ts\" \"examples/**/*.ts\"",
    "run": "tsx",
    "generate-api": "swagger-typescript-api -p ./weave.openapi.json -o ./src/generated -n traceServerApi.ts",
    "dev": "nodemon"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wandb/weave/js"
  },
  "author": "",
  "license": "Apache-2.0",
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts?(x)",
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "^weave$": "<rootDir>/src/index.ts",
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/generated",
      "<rootDir>/src/utils/userAgent.ts",
      "<rootDir>/src/inMemoryTraceServer.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "nodemonConfig": {
    "watch": [
      "."
    ],
    "ext": "ts,json",
    "exec": "tsx examples/evaluate.ts"
  },
  "dependencies": {
    "cli-progress": "^3.12.0",
    "openai": "^4.68.4",
    "uuidv7": "^1.0.1"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.5.1",
    "esbuild": "^0.20.1",
    "esbuild-plugin-polyfill-node": "^0.3.0",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "nyc": "^17.1.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "swagger-typescript-api": "^13.0.22",
    "ts-jest": "^29.2.5",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.1",
    "typedoc": "^0.27.0",
    "typedoc-plugin-markdown": "^4.2.9"
  }
}
